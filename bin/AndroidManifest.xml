<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        

        
        <activity
            android:name="com.example.smarthome.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.smarthome.LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.smarthome.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.smarthome.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Door">
        </activity>
        <activity
            android:name=".Aircondition">
        </activity>
        
        <activity
            android:name=".Curtain">
        </activity>
        
        <activity
            android:name=".Lamp">
        </activity>
        
        <activity
            android:name=".Setting">
        </activity>
    </application>

</manifest>
